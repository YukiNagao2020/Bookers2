
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user %>
      <h1>New book</h1>
      <%= render 'books/list', book: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
         <table class="table">
           <tbody>
             <tr>
               <td><%= link_to attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_img_small.jpg"%><br><%= link_to @user.name, user_path(@user) %></td>
               <td><%= @book.title %></td>
               <td><%= @book.body %></td>
               <% if @book.user_id == current_user.id %>
                  <td><%= link_to "Edit", edit_book_path(@book),class:"btn btn-success" %></td>
                  <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
               <% end %>
             </tr>
           </tbody>
          </table>
       </div>
   </div>
</div>





