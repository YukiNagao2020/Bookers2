<%= render 'users/list', user: @user %>
     
<%= render 'books/list', book: @book %>

<h1>Books</h1>
<table>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "https://via.placeholder.com/50x50"%>
        <% end %>
        </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
    </tr>
  <% end %>
</table>

