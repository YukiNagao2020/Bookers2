<%= render 'books/error', model: @book %>
<div class="container">
  <div class="row">
      <div class="col-md-3">
      <%= render 'users/list', user: @user %>
      <h2>New book</h2>
      <%= render 'books/list', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table book-index">
        <h2>Users</h2>
        <thead>
          <th>image</th>
          <th>name</th>
          <th></th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_img_small.jpg" %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= link_to "Show", user_path(current_user) %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
          